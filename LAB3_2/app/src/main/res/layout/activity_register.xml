<?xml version="1.0" encoding="utf-8"?>
<!-- This XML is first screen-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- This XML is first line layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--This widget can show text-->
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text="@string/name"/>

        <!--This widget can show name-->
        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- This XML is second line layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--This widget can show text-->
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text="@string/gender" />

        <!--This widget can show gender-->
        <TextView
            android:id="@+id/gender2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- This XML is third line layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--This widget can show text-->
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text="@string/msg" />

        <!--This widget can show form of message-->
        <TextView
            android:id="@+id/msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- This XML is fourth line layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <!--This widget call activity_main.xml-->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전" />
    </LinearLayout>

</LinearLayout>